@model List<FoodStore.Models.Invoice>

@{
}
<div class=" p-4">
    @if (Model != null && Model.Any())
    {
        <div class="table-wrapper">
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Mã đơn đặt hàng</th>
                        <th>Số bàn</th>
                        <th>Thời gian tạo</th>
                        <th>Tổng tiền</th>
                        <th>Trạng thái</th>
                        <th>-</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var invoice in Model)
                    {
                        @if (invoice.Status) // Chỉ hiển thị hóa đơn chưa thanh toán
                        {
                            <tr>
                                <td>@invoice.Id</td>
                                <td>@invoice.Order.TableId</td>
                                <td>@invoice.CreatedAt.ToString("HH:mm:ss yyyy-MM-dd")</td>
                                <td>@invoice.Price</td>
                                <td>
                                    <span class="fw-bold text-white bg-success px-2">Đã thanh toán</span>
                                </td>
                                <td>
                                    <a href="/employee/Invoice/DetailUnpaid/@invoice.Id" class="btn btn-secondary">
                                        Xem
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <p>Không có hóa đơn nào.</p>
    }
</div>


